# Git Local Configuration
# This file is machine-specific and should NOT be committed to your dotfiles repo
# IMPORTANT: Replace YOUR_SSH_PUBLIC_KEY_HERE with your actual SSH key from 1Password

[user]
  # REQUIRED: Replace with your SSH signing key from 1Password
  # Get this by running: ssh-add -L
  # Example: ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIHlourExampleKey... user@example.com
  signingkey = YOUR_SSH_PUBLIC_KEY_HERE

# Good defaults enabled
[core]
  editor = cursor          # Use Cursor as default editor
  autocrlf = input         # Handle line endings properly on macOS/Linux
  
[push]
  default = simple         # Only push current branch
  autoSetupRemote = true   # Automatically set up remote tracking

[pull]
  rebase = true           # Use rebase instead of merge when pulling

[credential]
  helper = osxkeychain    # Use macOS keychain for credentials

# Useful aliases enabled by default
[alias]
  co = checkout
  br = branch
  ci = commit
  st = status
  lg = log --oneline --graph --decorate --all
  unstage = reset HEAD --
  last = log -1 HEAD
  amend = commit --amend --no-edit
  undo = reset --soft HEAD~1
  
# Diff and merge tools (VS Code/Cursor integration)
[merge]
  tool = vscode
[mergetool "vscode"]
  cmd = code --wait $MERGED
  
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE

# Optional: Uncomment for work vs personal GitHub accounts
# [url "git@github.com-work:"]
#   insteadOf = git@github.com:
# [url "git@github.com-personal:"]
#   insteadOf = git@github.com: 